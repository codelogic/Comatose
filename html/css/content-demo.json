@import "layout";

/* main color definitions */
@red:               #9d261d;
@orange:            #f89406;
@yellow:            #ffc40d;
@green:             #46a546;
@blue:              #049CDB;
@purple:            #7a43b6;
@pink:              #c3325f;

@primary-background: #ffffff;
@primary-foreground: #353535;
@primary-accent: #b00000;

@linkColor: #808080;
@linkColorHover: darken(@linkColor, 15);


body {
	background: @primary-background;
	color: @primary-foreground;
}

a {
	color: @linkColor;
}

a:hover,
a:visited:hover {
	color: @linkColorHover;
	
}
a:visited {
	color: @linkColor;
}

p {
	max-width: 700px;
}

p.right {
		margin-left: auto;
		text-align: right;
	}
p.center {
		margin: 0 auto;
		text-align: center;
	}
p.justify {
		width: 100%;
		text-align: justify;
	}