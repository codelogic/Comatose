@import "layout";

/* main color definitions */
@red:               #9d261d;
@orange:            #f89406;
@yellow:            #ffc40d;
@green:             #46a546;
@blue:              #049CDB;
@purple:            #7a43b6;
@pink:              #c3325f;

@primary-background: #fcfbfb;
@primary-foreground: #303030;
@primary-accent: #b00000;

@linkColor: #808080;
@linkColorHover: darken(@linkColor, 15);

@header-size: 14px;
@header-foreground: #202020;


body {
	background: @primary-background;
	color: @primary-foreground;
	font-size: @size;
	line-height: @line;
	font-family: Verdana, 'BitStream vera Sans', Helvetica, sans-serif;
}


/* Links */

a {
	color: @linkColor;
}
a:hover,
a:visited:hover {
	color: @linkColorHover;
	
}
a:visited {
	color: @linkColor;
}


/* Paragraphs */

p {
	max-width: 700px;
	font-size: @size;
	margin-top: @line * 0.5;
	margin-bottom: @line * 0.5;
	line-height: @line;
}
p.right {
	margin-left: auto;
	text-align: right;
}
p.center {
	margin: 0 auto;
	text-align: center;
}
p.justify {
	width: 100%;
	text-align: justify;
}

/* UL and OL lists */

ul, ol 
{
	margin-left: @line + 3px;
}

ul ul, ul ol, ol ol {
	margin-left: @line;
}

/* Images */
figure, img {
	max-width: 100%;
	margin: (@line - @size) @size (@line - @size) auto;
}

figure.right, img.right {
	margin-left: auto;
	margin-right: 0;
	display: block;
}
figure.center, img.center {
	margin-left: auto;
	margin-right: auto;
	display: block;
}

figure.fill, img.fill {
	width: 100%;
}

p img, p figure {
	float: left;
}

/* Sizing */

.xsmall {
	font-size: 10px;
	line-height: @line;
}

.small {
	font-size: 12px;
	line-height: @line;
}

.normal {
	font-size: @header-size;
	line-height: @line;
	margin-top: @line * 1.75;
	margin-bottom: @line * 0.25;
}

.large {
	font-size: @header-size * 1.2;
	line-height: @line;
	margin-top: @line * 1.75;
	margin-bottom: @line * 0.25;
}

.huge {
	font-size: @header-size * 1.5;
	line-height: @line * 2;
	margin-top: @line * 1.75;
	margin-bottom: @line * 0.25;
}

.massive {
	font-size: @header-size * 2;
	line-height: @line * 2;
	margin-top: @line * 1.75;
	margin-bottom: @line * 0.25;
}

.gigantic {
	font-size:  @header-size * 3;
	line-height: @line * 4;
	margin-top: @line * 2;
	margin-bottom: @line;
}

h1, h2, h3, h4, h5, h6 {
	color: @header-foreground;
	clear: left;
}

#page-header, 
#page-footer {
	h1 {
		.gigantic
	}
	h2 {
		.massive;
	}
	
	h3 {
		.huge;
	}
	
	h4, h5, h6 {
		.large;
	}
}

#page-content, 
#page-sidebar {
	h1 {
		.massive;
	}
	
	h2{
		.huge;
	}
	
	h3, h4, h5, h6 {
		.large;
	}
}