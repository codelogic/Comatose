@import "layout";
@import "variables";




body {
	background: @primary-background;
	color: @primary-foreground;
	
	#font.sans-serif();
	border-top: 5px solid @strong-foreground;
}


/* Links */

a {
	color: @linkColor;
	text-decoration: none;
	line-height: inherit;
	font-weight: inherit;
	&:hover,
	&:visited:hover {
		color: @linkColorHover;
		text-decoration: underline;
	}
	&:visited {
		color: @linkColor;
	}
}


/* Paragraphs */

p {
	max-width: 800px;
	font-size: @basefont;
	margin-top: @baseline * 0.5;
	margin-bottom: @baseline * 0.5;
	line-height: @baseline;
	
	&.right {
		margin-left: auto;
		text-align: right;
	}
	&.center  {
		margin: 0 auto;
		text-align: center;
	}
	&.justify {
		width: 100%;
		text-align: justify;
	}
}

/* UL and OL lists */
ul, ol 
{
	margin-left: @baseline + 3px;
	
	&.unstyled {
		margin-left: 0;
		list-style-type:none;
	}
}

ul ul, ul ol, ol ol {
	margin-left: @baseline;
}

/* Images */
figure, img {
	max-width: 100%;
	margin: (@baseline - @basefont) @basefont (@baseline - @basefont) auto;
	
	&.right {
		margin-left: auto;
		margin-right: 0;
		display: block;
	}
	&.center {
		margin-left: auto;
		margin-right: auto;
		display: block;
	}
	&.fill {
		width: 100%;
	}
}

p img, 
p figure {
	float: left;
	display: inline;
	
	&.right {
		float: right;
		margin-left: @basefont;
		margin-right: auto;

	}
	
	&.center {
		float: center;
		margin-left: @basefont;
		margin-right: @basefont;
	}
}

/* Block quote */

blockquote {
	margin-left: @baseline * 2;
}

/* Sizing */

.xsmall {
	font-size: 10px;
	line-height: @baseline;
}

.small {
	font-size: 12px;
	line-height: @baseline;
}

.normal {
	font-size: @headerfont;
	line-height: @baseline;
	margin-top: @baseline * 1.75;
	margin-bottom: @baseline * 0.25;
}

.large {
	font-size: @headerfont * 1.2;
	line-height: @baseline;
	margin-top: @baseline * 1.75;
	margin-bottom: @baseline * 0.25;
}

.huge {
	font-size: @headerfont * 1.5;
	line-height: @baseline * 2;
	margin-top: @baseline * 1.75;
	margin-bottom: @baseline * 0.25;
}

.massive {
	font-size: @headerfont * 2;
	line-height: @baseline * 2;
	margin-top: @baseline * 1.75;
	margin-bottom: @baseline * 0.25;
}

.gigantic {
	font-size:  @headerfont * 3;
	line-height: @baseline * 4;
	margin-top: @baseline * 2;
	margin-bottom: @baseline;
}

h1, h2, h3, h4, h5, h6 {
	color: @header-foreground;
	clear: both;
}

/* header styling */

#page-header, 
#page-footer {
	h1 {
		.gigantic
	}
	h2 {
		.massive;
	}
	
	h3 {
		.huge;
	}
	
	h4, h5, h6 {
		.large;
	}
}

#page-content, 
#page-sidebar {
	h1 {
		.massive;
	}
	
	h2{
		.huge;
	}
	
	h3, h4, h5, h6 {
		.large;
	}

	
	article {
		h1, h2 {
			border-bottom: 5px solid @strong-foreground;
			margin-bottom: @baseline - 5px;
			margin-top: @baseline * 2;
		}
		
		header {
			h1, h2 {
				border-bottom: none;
			}
			
			h1 {
				.massive;
			}
			h2{
				.huge;
			}
		}
		
		aside {
			margin-bottom: @baseline;
			margin-top: @baseline - @basefont;
			
			h1 {
				.huge;
				
				margin-top: 0;
				line-height: 0;
			}
			
			h2, h3, h4, h5, h6 {
				.large;
				
				margin-top: 0;
			}
		}
	}
}